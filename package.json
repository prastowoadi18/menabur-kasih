{
  "name": "menabur-kasih",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier": "npx prettier --write . && git add .",
    "husky:setup": "npx husky-init && npm run husky:commitlint && npm run husky:prettier && npm run husky:lint",
    "husky:commitlint": "npx husky add .husky/commit-msg 'npx --no-install commitlint --edit'",
    "husky:prettier": "npx husky set .husky/pre-commit 'npm run prettier'",
    "husky:lint": "npx husky add .husky/pre-commit 'npm run lint'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.321.0",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-custom": "*",
    "eslint-config-next": "14.1.0",
    "husky": "^8.0.0",
    "lint-staged": "13.2.2",
    "postcss": "^8",
    "prettier": "3.0.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "eslint-config-prettier": "^9.1.0",
    "prettier-plugin-tailwindcss": "^0.5.10"
  },
  "lint-staged": {
    "src/*.{js,ts,jsx,tsx}": [
      "prettier --config .prettierrc.js --write",
      "git add"
    ]
  }
}
